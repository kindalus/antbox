{
  "imports": {
    "@std/http": "jsr:@std/http",
    "@std/assert": "jsr:@std/assert",
    "@h3": "npm:h3"
  },

  "fmt": {
    "useTabs": true,
    "indentWidth": 4,
    "lineWidth": 100,
    "singleQuote": false,
    "proseWrap": "preserve"
  },

  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },

  "test": {
    "include": ["src/**/*_test.ts"]
  }
}
